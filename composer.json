{
    "name": "ifyazilim/slim-bridge-with-controller",
    "description": "PHP-DI integration in Slim with Controller",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "DI\\Bridge\\Slim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DI\\Bridge\\Slim\\Test\\": "tests/"
        }
